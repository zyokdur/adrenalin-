{
  "name": "daily-report-system",
  "version": "1.0.0",
  "description": "Desktop Daily Report System - Günlük Rapor Sistemi",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on http://127.0.0.1:5173 && NODE_ENV=development VITE_DEV_SERVER_URL=http://127.0.0.1:5173 electron dist/main.js\"",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "electron-dev": "electron .",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "date-fns": "^3.0.0",
    "exceljs": "^4.4.0",
    "firebase": "^12.7.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.dailyreport.app",
    "productName": "Daily Report System",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
